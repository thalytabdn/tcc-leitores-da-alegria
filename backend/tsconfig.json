  "compilerOptions": {
    "target": "es2016",        
    "module": "commonjs", 
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
